@page
@model BlindTestIo.Pages.GameModel

<body class="gameBody">
    <div class="container-fluid text-center">
        <div class="row" style="margin:10% 10% 0 10%">

            <div class="welcomeOverlay" id="welcomeOverlay">
                <div class="welcomeText">
                    Bienvenue dans BlindTest.IO ❤ !
                    <br />
                    <button class="btn btn-success" id="iWannaPlayButton">Je veux jouer !</button>
                </div>
            </div>

            <div class="buzzOverlay" id="buzzOverlay" style="visibility:hidden;">
                <div class="buzzPlayer">
                    <span id="buzzPlayerText"></span>
                    <br />
                    <span id="buzzCountdown">3</span>
                </div>
            </div>

            @*LISTE JOUEURS*@
            <div class="col-md-3 m-3 text-left">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Joueur</th>
                            <th>Points</th>
                        </tr>
                    </thead>
                    <tbody id="playersList">
                    </tbody>
                </table>
            </div>

            <div class="col m-3">
                @*ADMIN PANEL*@
                <div class="row" id="adminPanel">
                    <div height:5em" class="gameBlock">
                        <label class="text-light">Video ID</label>
                        <input type="text" id="loadInput" />
                        <button class="btn btn-primary" id="loadButton">Load</button>
                        <button class="btn btn-primary" id="playButton">Play</button>
                        <button class="btn btn-primary" id="pauseButton">Pause</button>
                        <button class="btn btn-primary" id="syncButton">Sync</button>
                        <button class="btn btn-primary" id="newButton">New</button>
                    </div>
                </div>

                @*VIDEO YOUTUBE*@
            <div class="row gameBlock">
                <div class="videoHider"></div>
                <div class="video" id="player"></div>
                <div class="videoDummy"></div>
            </div>

                @*BUZZER & VOLUME*@
            <div class="row gameBlock">
                <label class="text-light">Volume</label>
                <input class="form-control" id="volumeSlider" type="range" min="0" max="100" value="50">
                <button class="buzzer" id="buzzer">
                    <div class="buzzerTxt">BUZZ !</div>
                </button>
            </div>

                @*EVENEMENTS*@
                <div class="row text-left text-light events">
                    <ul id="eventsList">
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/game.js"></script>

</body>
